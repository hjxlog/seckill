<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hjxlog.dao.OrderDao">

    <resultMap id="OrderMap" type="com.hjxlog.model.Order">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="goods_id" property="goodsId" jdbcType="BIGINT"/>
        <result column="goods_name" property="goodsName" jdbcType="VARCHAR"/>
        <result column="goods_count" property="goodsCount" jdbcType="INTEGER"/>
        <result column="goods_price" property="goodsPrice" jdbcType="DECIMAL"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP"/>
        <result column="pay_date" property="payDate" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="all_column_list">
		id, user_id, goods_id, goods_name, goods_count, goods_price, status, create_date, pay_date
	</sql>

    <select id="selectByPrimaryKey" resultMap="OrderMap">
        select
        <include refid="all_column_list"/>
        from order
        where
        id=#{id,jdbcType=BIGINT}

    </select>

    <insert id="insert" parameterType="com.hjxlog.model.Order">
        insert into order
        (
        <include refid="all_column_list"/>
        )
        values
        (
        #{id,jdbcType=BIGINT},
        #{userId,jdbcType=BIGINT},
        #{goodsId,jdbcType=BIGINT},
        #{goodsName,jdbcType=VARCHAR},
        #{goodsCount,jdbcType=INTEGER},
        #{goodsPrice,jdbcType=DECIMAL},
        #{status,jdbcType=INTEGER},
        #{createDate,jdbcType=TIMESTAMP},
        #{payDate,jdbcType=TIMESTAMP}
        )
    </insert>

    <update id="update" parameterType="com.hjxlog.model.Order">
	    update
			order
		set
    		id = #{id,jdbcType=BIGINT},
    		user_id = #{userId,jdbcType=BIGINT},
    		goods_id = #{goodsId,jdbcType=BIGINT},
    		goods_name = #{goodsName,jdbcType=VARCHAR},
    		goods_count = #{goodsCount,jdbcType=INTEGER},
    		goods_price = #{goodsPrice,jdbcType=DECIMAL},
    		status = #{status,jdbcType=INTEGER},
    		create_date = #{createDate,jdbcType=TIMESTAMP},
    		pay_date = #{payDate,jdbcType=TIMESTAMP}
		where
			id=#{id,jdbcType=BIGINT}
			
	</update>

    <delete id="delete">
	    delete from
			order
		where
			id=#{id,jdbcType=BIGINT}
			
	</delete>

    <insert id="insertBatch" parameterType="java.util.List">

        <foreach collection="list" item="item" index="index" open="begin" close="end;" separator=";">
            insert into order
            (
            <include refid="all_column_list"/>
            )
            values
            (
            #{item.id,jdbcType=BIGINT},
            #{item.userId,jdbcType=BIGINT},
            #{item.goodsId,jdbcType=BIGINT},
            #{item.goodsName,jdbcType=VARCHAR},
            #{item.goodsCount,jdbcType=INTEGER},
            #{item.goodsPrice,jdbcType=DECIMAL},
            #{item.status,jdbcType=INTEGER},
            #{item.createDate,jdbcType=TIMESTAMP},
            #{item.payDate,jdbcType=TIMESTAMP}
            )
        </foreach>

    </insert>

    <update id="updateBatch" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index" open="begin" close="end;" separator=";">
            update
            order
            set
            id = #{item.id,jdbcType=BIGINT},
            user_id = #{item.userId,jdbcType=BIGINT},
            goods_id = #{item.goodsId,jdbcType=BIGINT},
            goods_name = #{item.goodsName,jdbcType=VARCHAR},
            goods_count = #{item.goodsCount,jdbcType=INTEGER},
            goods_price = #{item.goodsPrice,jdbcType=DECIMAL},
            status = #{item.status,jdbcType=INTEGER},
            create_date = #{item.createDate,jdbcType=TIMESTAMP},
            pay_date = #{item.payDate,jdbcType=TIMESTAMP}
            where
            id=#{item.id,jdbcType=BIGINT}

        </foreach>
    </update>

    <delete id="deleteBatch" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index" open="begin" close="end;" separator=";">
            delete from
            order
            where
            id=#{item.id,jdbcType=BIGINT}

        </foreach>
    </delete>

    <select id="selectAll" parameterType="com.hjxlog.model.Order"
            resultMap="OrderMap">
        select
        <include refid="all_column_list"/>
        from order
        <where>
            <if test="id != null ">
                and id = #{id,jdbcType=BIGINT}
            </if>
            <if test="userId != null ">
                and user_id = #{userId,jdbcType=BIGINT}
            </if>
            <if test="goodsId != null ">
                and goods_id = #{goodsId,jdbcType=BIGINT}
            </if>
            <if test="goodsName != null and goodsName != '' ">
                <bind name="goodsNameBind" value="'%' + goodsName + '%'"/>
                and goods_name like #{goodsNameBind}
            </if>
            <if test="goodsCount != null ">
                and goods_count = #{goodsCount,jdbcType=INTEGER}
            </if>
            <if test="goodsPrice != null ">
                and goods_price = #{goodsPrice,jdbcType=DECIMAL}
            </if>
            <if test="status != null ">
                and status = #{status,jdbcType=INTEGER}
            </if>
            <if test="createDate != null ">
                and create_date = #{createDate,jdbcType=TIMESTAMP}
            </if>
            <if test="payDate != null ">
                and pay_date = #{payDate,jdbcType=TIMESTAMP}
            </if>
        </where>
    </select>

</mapper>